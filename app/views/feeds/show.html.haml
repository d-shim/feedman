- model_class = Feed
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p#notice= notice

%p
  %b Title:
  = @feed.title
%p
  %b Url:
  = @feed.url
%p
  %b Feed url:
  = @feed.feed_url
%p
  %b Category:
  = @feed.category_id
%p
  %b Last modified:
  = @feed.last_modified

%br
= link_to t('.edit', :default => t("helpers.links.edit")), edit_feed_path(@feed), :class => 'btn btn-primary'
/= link_to t('.edit', :default => t("helpers.links.edit")), edit_feed_path(@feed), :class => 'btn btn-mini btn-primary'
= link_to t('.destroy', :default => t("helpers.links.destroy")), feed_path(@feed), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
/= link_to t('.destroy', :default => t("helpers.links.destroy")), feed_path(@feed), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
/= link_to t('.cancel', :default => t("helpers.links.cancel")), feeds_path, :class => 'btn'
= link_to t('.cancel', :default => t("helpers.links.cancel")), "/" , :class => 'btn'
/= link_to t('.cancel', :default => t("helpers.links.cancel")), feeds_path, :class => 'btn btn-mini'

/= link_to 'Edit', edit_feed_path(@feed)
/|
/= link_to 'Destroy', @feed, :method => :delete, :data => { :confirm => 'Are you sure?' }
/%br
/= link_to 'Back', feeds_path
%br
%br

= render :file => 'layouts/common/feed_entry'

